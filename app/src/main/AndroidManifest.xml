<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.restaurantmenu">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity" android:theme="@style/AppThemeNoStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MealActivity" />
        <activity android:name=".SignUpActivity" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".SignInActivity" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".MainActivity" />
    </application>

</manifest>